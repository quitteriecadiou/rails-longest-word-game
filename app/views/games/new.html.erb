<div class="container">
  <h1>New Game</h1>
  <p>Here are your letters:</p>

  <ul>
    <% @letters.each do |letter| %>
      <li class="btn btn-primary"><%= letter %></li>
    <% end %>
  </ul>

  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="input-group">
      <input type="text" name="word" class="form-control">
      <span class="input-group-btn">
        <input type="submit" value="Play" class="form-control">
      </span>
    </div>
  </form>
  <%= link_to 'New letters' ,'/new' %>
</div>

